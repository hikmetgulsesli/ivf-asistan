# IVF Asistan - Environment Variables Example
# Copy this file to .env and fill in your values

# Server Configuration
PORT=4520
NODE_ENV=development

# Database (PostgreSQL)
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:password@72.61.186.46:37550/ivf_asistan

# OpenAI API (for AI-powered features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# MiniMax API (for AI chat and embeddings)
MINIMAX_API_KEY=sk-your-minimax-api-key-here
MINIMAX_API_HOST=https://api.minimax.io

# Kimi API (for video analysis)
KIMI_API_KEY=your-kimi-api-key-here
KIMI_API_URL=https://api.kimi.com/coding/v1
KIMI_MODEL=kimi-for-coding

# JWT Secret for admin authentication
# Generate a secure random string (min 32 characters)
JWT_SECRET=your-secure-jwt-secret-min-32-chars

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:4520

# Cache Configuration
CACHE_TTL_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# Session Cleanup (hours)
SESSION_CLEANUP_HOURS=24

# Client (Vite)
VITE_API_URL=http://localhost:4520/api
